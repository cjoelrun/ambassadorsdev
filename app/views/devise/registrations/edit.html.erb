<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>

    <div class="control-group">
      <div class="controls">
	<div id="change-password-button" class="btn" href="#">Change Password</div>
      </div>
    </div>

    <div id="change-password" class="hide">
      <%= f.input :password %> 
      <%= f.input :password_confirmation %>
    </div>

    <%= f.input :banner, :wrapper => :prepend do %> 
      <span class="add-on">@</span><%= f.input_field :banner %>
    <% end %> 

    <%= f.input :utsa_id, :wrapper => :append do %> 
      <%= f.input_field :utsa_id %><span class="add-on">@my.utsa.edu</span>
    <% end %> 

    <%= f.input :phone %>
    <%= f.input :birthday, :start_year => Date.today.year - 40, :end_year => Date.today.year - 12, :order => [:month, :day, :year] %>

    <%= f.input :local_street %>
    <%= f.input :local_city %>
    <%= f.input :local_state %>
    <%= f.input :local_zip %>
    <%= f.input :local_apt %>

    <%= f.input :same_address do %>
      <%= f.input_field :same_address %>
      <p class="help-inline">Check if your local address is the same as your permanent address</p>
    <% end %>

    <div id="permanent_address" >
      <%= f.input :permanent_street %>
      <%= f.input :permanent_city %>
      <%= f.input :permanent_state %>
      <%= f.input :permanent_zip %>
      <%= f.input :permanent_apt %>
    </div>

    <%= f.input :tour_trained do %>
      <%= f.input_field :tour_trained %>
      <p class="help-inline">Check only if you've been offically tour trained</p>
    <% end %>

    <%= f.input :current_password, :hint => "We need your current password to confirm your changes" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Reset', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>

