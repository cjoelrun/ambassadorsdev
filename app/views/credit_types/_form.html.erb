<%= simple_form_for(@credit_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :month_requirement %>
  </div>

  <div class="form-inputs">
    <%= f.input :service %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
