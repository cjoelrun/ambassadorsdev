<div class="page-header">
  <h1>Users</h1>
</div>

<%= render :partial => "search_form" %>

<div class="content">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
	<th></th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Phone</th>
	<th>Email</th>
	<th>Tour Trained</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
	<tr>
	  <td>
	    <%= link_to image_tag(user.avatar_url), user %>
	  </td>
	  <td><%= link_to user.first_name, user %></td>
	  <td><%= link_to user.last_name, user %></td>
	  <td><%= user.phone %></td>
	  <td><%= mail_to user.email %></td>
	  <td>
	    <%= render_tour_trained user.tour_trained %>
	  </td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
