<h2>Users</h2>
<div class="content">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
	<th></th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Phone</th>
	<th>Email</th>
	<th>Tour Trained</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
	<tr>
	  <td>
	    <% if user.image.blank? %>
	      <%= link_to raw("<i class='icon-user icon-white'></i>"), user, :class => 'btn btn-primary' %> 
	    <% else -%>
	      <%= link_to image_tag(user.image_url(:thumb)), user %>
	    <% end -%>
	  </td>
	  <td><%= user.first_name %></td>
	  <td><%= user.last_name %></td>
	  <td><%= user.phone %></td>
	  <td><%= user.email %></td>
	  <td>
	    <%= render_tour_trained user.tour_trained %>
	  </td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
