<h2>Events</h2>
<div class="content">
    <table class="table table-strped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Start time</th>
                <th>End time</th>
                <th>Members needed</th>
                <th>Hours</th>
                <th>Location</th>
                <th>Instructions</th>
                <th>Ait</th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= time_tag(event.date) %></td>
            <td><%= time_tag event.start_time, :format=>'%l:%M %p' %></td>
            <td><%= time_tag event.end_time, :format=>'%l:%M %p' %></td>
            <td><%= event.members_needed %></td>
            <td><%= event.hours %></td>
            <td><%= event.location %></td>
            <td><%= event.instructions %></td>
            <td><%= render_ait(event.ait) %></td>
            <td>
                <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), event, :class => 'btn btn-primary' %>
                <%= link_to raw('<i class="icon-pencil icon-white"></i>'), edit_event_path(event), :class => 'btn btn-success' %>
                <%= link_to raw('<i class="icon-remove icon-white"></i>'), event, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger'%>
            </td>
          </tr>
        <% end %>
    </tbody>
    </table>

    <%= link_to 'New Event', new_event_path, :class => "btn btn-primary" %>
</div>