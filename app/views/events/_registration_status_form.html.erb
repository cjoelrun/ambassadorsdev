<% if @registration %>
  <%= form_for([@user,@registration], :url => "/users/" + @user.id.to_s + "/registrations/" + @registration.id.to_s, :method => 'put') do |f| %>
    <% if @event.past? %>
      <%= f.select :registration_status_id, RegistrationStatus.all.collect {|c| [ c.name, c.id ] }, {:disabled => '1'}, :class => 'input-medium' %>
    <% else %>
      <%= f.select :registration_status_id, RegistrationStatus.all.collect {|c| [ c.name, c.id ] }, {:disabled => '3'}, :class => 'input-medium' %>
    <% end %>
    <%= f.submit "Update", :class => "btn-primary" %>
  <% end %>
<% else -%>
  Not Registered
<% end %>
