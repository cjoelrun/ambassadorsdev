<div class="btn-group">
  <%= link_to raw('<i class="icon-arrow-left"></i> Back to Events'), events_path, :class => "btn" %>
  <% if can? :edit, Event %>
    <%= link_to " Edit", edit_event_path(@event), :class => "btn" %>
  <% end %>

  <% if can? :destroy, Event %>
    <%= link_to "Delete", event_path, confirm: 'Are you sure?', method: :delete, :class => 'btn'%>
  <% end %>
</div>
