<h1><%= @event.title %></h1>

<dl>
  <dt>Date:</dt>
  <dd>
    <%= time_tag @event.date %>
  </dd>

  <dt>Start time:</dt>
  <dd>
    <%= time_tag @event.start_time, :format=>'%l:%M %p' %>
  </dd>

  <dt>End time:</dt>
  <dd>
    <%= time_tag @event.end_time, :format=>'%l:%M %p' %>
  </dd>

  <dt>Members needed:</dt>
  <dd>
    <%= @event.members_needed %>
  </dd>

  <dt>Hours:</dt>
  <dd>
    <%= @event.hours %>
  </dd>

  <dt>Location:</dt>
  <dd>
    <%= @event.location %>
  </dd>

  <dt>Instructions:</dt>
  <dd>
    <%= @event.instructions %>
  </dd>

  <dt>Ait:</dt>
  <dd>
    <%= render_ait(@event.ait) %>
  </dd>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
