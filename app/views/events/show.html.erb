<h1><%= @event.title %></h1>

<dl>
  <dt>Date:</dt>
  <dd>
    <%= time_tag @event.date %>
  </dd>

  <dt>Start time:</dt>
  <dd>
    <%= time_tag @event.start_time, :format=>'%l:%M %p' %>
  </dd>

  <dt>End time:</dt>
  <dd>
    <%= time_tag @event.end_time, :format=>'%l:%M %p' %>
  </dd>

  <dt>Members needed:</dt>
  <dd>
    <%= @event.members_needed %>
  </dd>

  <dt>Hours:</dt>
  <dd>
    <%= @event.hours %>
  </dd>

  <dt>Location:</dt>
  <dd>
    <%= @event.location %>
  </dd>

  <dt>Instructions:</dt>
  <dd>
    <%= @event.instructions %>
  </dd>

  <dt>Ait:</dt>
  <dd>
    <%= render_ait(@event.ait) %>
  </dd>

<div class="btn-group">
<%= link_to raw('<i class="icon-pencil icon-white"></i> Edit'), edit_event_path(@event), :class => "btn btn-success" %>
<%= link_to raw('<i class="icon-remove icon-white"></i> Delete'), event_path, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger'%>
<%= link_to raw('<i class="icon-arrow-left"></i> Back'), events_path, :class => "btn" %>
</div>
