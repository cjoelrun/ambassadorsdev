<%= simple_form_for(@event, :html => { :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :date, :start_year => Date.today.year, :end_year => Date.today.year + 1, :order => [:month, :day, :year] %>
    <%= f.input :start_time , :ampm => true %>
    <%= f.input :end_time, :ampm => true %>
    <%= f.input :members_needed %>
    <%= f.association :event_type %>
    <%= f.association :credit_type %>
    <%= f.input :hours %>
    <%= f.input :location %>
    <%= f.association :apparel %>
    <%= f.input :instructions, :input_html => { :rows => "4" }%>
    <%= f.input :ait do %>
      <%= f.input_field :ait %>
      <p class="help-inline">Check if AITs are allowed to attend</p>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
